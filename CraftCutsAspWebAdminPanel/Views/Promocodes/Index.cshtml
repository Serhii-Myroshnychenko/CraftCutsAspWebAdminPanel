@model IEnumerable<CraftCutsAspWebAdminPanel.Models.Promocode>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>


<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="CreateAuto">CreateAuto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalePercent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalePercent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PromocodeId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PromocodeId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PromocodeId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
